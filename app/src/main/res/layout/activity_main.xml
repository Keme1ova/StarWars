<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/cosmos">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotty_flame"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:visibility="invisible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="108dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotty_drive1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:visibility="invisible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotty_drive2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:visibility="invisible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/images_robots_layuot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/women"
            android:layout_margin="14dp"
            />
        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/man1"
            android:layout_margin="14dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/who_will_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="282dp"
        android:text="Who will win?"
        android:textColor="#FFEB3B"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="206dp"
        >
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SuperWomen"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="#FFEB3B"
            />
        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="64dp"
            android:textSize="15sp"
            android:textColor="#FFEB3B"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="370dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy1"
            android:textSize="15sp"
            android:textColor="#FFEB3B"
            />
        <TextView
            android:id="@+id/tv_energy1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#D0EEFB"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy2"
            android:textSize="15sp"
            android:textColor="#FFEB3B"
            />
        <TextView
            android:id="@+id/tv_energy2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#D0EEFB"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="430dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lasers1"
            android:textSize="15sp"
            android:textColor="#FFEB3B"
            />
        <TextView
            android:id="@+id/tv_laser1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#D0EEFB"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lasers2"
            android:textSize="15sp"
            android:textColor="#FFEB3B"
            />
        <TextView
            android:id="@+id/tv_laser2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#D0EEFB"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="490dp">
        <Button
            android:id="@+id/btn_start"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:backgroundTint="#880505"
            android:text="Start"
            android:textSize="18sp"
            android:layout_marginStart="26dp"

            />
        <Button
            android:id="@+id/btn_fight"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:backgroundTint="#FF9800"
            android:text="Fight"
            android:textSize="18sp"
            android:layout_marginLeft="90dp"
            android:visibility="invisible"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_game_over"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFEB3B"
        android:text="Game Over"
        android:visibility="invisible"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>